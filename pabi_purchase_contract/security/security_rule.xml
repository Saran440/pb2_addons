<openerp>
	<data noupdate="0">

		<!-- Rule OU -->
		<record id="rule_pabi_purchase_contract_by_operating_unit" model="ir.rule">
			<field name="name">PO Contract allowed operating units</field>
			<field name="model_id" ref="model_purchase_contract" />
			<field name="groups" eval="[(4, ref('group_pabi_purchase_contract_user'))]" />
			<field name="perm_read" eval="True" />
			<field name="perm_write" eval="True" />
			<field name="perm_create" eval="True" />
			<field name="perm_unlink" eval="True" />
			<field name="domain_force">['|', '|', (user.access_all_operating_unit, '=', True), ('operating_unit_id','=',False),('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
		</record>

		<!-- Rule ReadOnly All -->
		<record id="rule_pabi_purchase_contract_by_readall" model="ir.rule">
			<field name="name">Purchase Contract By ReadOnly All</field>
			<field name="model_id" ref="model_purchase_contract" />
			<field name="groups" eval="[(4, ref('group_pabi_purchase_contract_readall'))]" />
			<field name="perm_read" eval="True" />
			<field name="perm_write" eval="False" />
			<field name="perm_create" eval="False" />
			<field name="perm_unlink" eval="False" />
			<field name="domain_force">[(1,'=',1)]</field>
		</record>

		<!-- Rule LAW a -->
		<record id="rule_pabi_purchase_contract_by_lawyer" model="ir.rule">
			<field name="name">Purchase Contract By Lawyer</field>
			<field name="model_id" ref="model_purchase_contract" />
			<field name="groups" eval="[(4, ref('group_pabi_purchase_contract_lawyer'))]" />
			<field name="perm_read" eval="True" />
			<field name="perm_write" eval="True" />
			<field name="perm_create" eval="False" />
			<field name="perm_unlink" eval="False" />
			<field name="domain_force">[(1,'=',1)]</field>
		</record>

		<!-- Rule Admin -->
		<record id="rule_pabi_purchase_contract_by_admin" model="ir.rule">
			<field name="name">Purchase Contract By Admin</field>
			<field name="model_id" ref="model_purchase_contract" />
			<field name="groups" eval="[(4, ref('group_pabi_purchase_contract_admin'))]" />
			<field name="perm_read" eval="True" />
			<field name="perm_write" eval="True" />
			<field name="perm_create" eval="True" />
			<field name="perm_unlink" eval="True" />
			<field name="domain_force">[(1,'=',1)]</field>
		</record>
	</data>
</openerp>
