            <td class="oe_dialog_icon"><img t-att-src='_s + "/nstdaauth_cas/static/src/img/fail.png"'/></td>
            <td>
                <p>
                    <t t-js="d">
                        var message = d.message ? d.message : d.error.data.fault_code;
                        d.html_error = context.engine.tools.html_escape(message)
                        .replace(/\n/g, '<br/>');
                    </t>
                    <t t-raw="html_error"/>
                </p>
            </td>
        </tr>
    </table>
</t>

</templates>
