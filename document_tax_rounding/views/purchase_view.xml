<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_purchase_order_form" model="ir.ui.view">
             <field name="name">view.purchase.order.form</field>
             <field name="model">purchase.order</field>
             <field name="type">form</field>
             <field name="inherit_id" ref="purchase.purchase_order_form"/>
             <field name="arch" type="xml">
                 <field name="amount_tax" position="after">
                    <field name="tax_mismatch" string="Tax Mismatch" invisible="1"/>
                    <button name="fix_tax_rounding"
                        attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('tax_mismatch', '=', False)]}"
                        string="(fix tax rounding)" class="oe_link oe_edit_only"
                        type="object" help="Fix tax rounding in case mismatch" />
                 </field>
             </field>
         </record>
    </data>
</openerp>
