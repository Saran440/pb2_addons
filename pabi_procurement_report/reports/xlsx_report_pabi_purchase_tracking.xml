<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_pabi_purchase_tracking_view" model="ir.ui.view">
            <field name="name">xlsx.report.pabi.purchase.tracking.view</field>
            <field name="model">xlsx.report.pabi.purchase.tracking</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='criteria']" position="inside">
                	<sheet>
                		<group>
		                    <field name="org_ids" widget="many2many_tags"/>
		                    <field name="chartfield_ids" widget="many2many_tags"/>
		                    <field name="org_name" invisible="0"/>
		                    <field name="budget_name" invisible="0"/>
		                </group>
                       	<div>
                        	<h1><label string="PR"/></h1>
                       	</div>
	                    <group>
	                        <group>
		                        <field name="pr_ids" widget="many2many_tags"/>
		                        <field name="pr_requester_ids" widget="many2many_tags"/>
		                        <field name="pr_responsible_ids" widget="many2many_tags"/>
		                        <field name="pr_date_from"/>
		                        <field name="pr_date_to"/>
		                        <field name="pr_number" invisible="0"/>
		                        <field name="pr_requester_name" invisible="0"/>
		                        <field name="pr_responsible_name" invisible="0"/>
		                        <field name="pr_date" invisible="0"/>
		                    </group>
		                </group>  
                       	<div>
                        	<h1><label string="PO"/></h1>
                        </div>  
	                    <group>
	                        <group>
		                        <field name="po_ids" widget="many2many_tags"/>
		                        <field name="po_responsible_ids" widget="many2many_tags"/>
		                        <field name="po_date_from"/>
		                        <field name="po_date_to"/>
		                        <field name="po_number" invisible="0"/>
		                        <field name="po_responsible_name" invisible="0"/>
		                        <field name="po_date" invisible="0"/>
	                        </group>
	                    </group>
	            	</sheet>
                </xpath>
            </field>
        </record>

        <record id="action_xlsx_report_pabi_purchase_tracking" model="ir.actions.act_window">
            <field name="name">Purchase Tracking</field>
            <field name="res_model">xlsx.report.pabi.purchase.tracking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_xlsx_report_pabi_purchase_tracking" name="Purchase Tracking" parent="menu_procurement_report" action="action_xlsx_report_pabi_purchase_tracking" sequence="99"/>


    </data>
</openerp>
