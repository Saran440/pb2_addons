<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_pabi_purchase_annual_view" model="ir.ui.view">
            <field name="name">xlsx.report.pabi.purchase.annual.view</field>
            <field name="model">xlsx.report.pabi.purchase.annual</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='criteria']" position="inside">
                    <group>
                        <field name="org_ids" widget="many2many_tags"/>
                        <field name="method_ids" widget="many2many_tags"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="action_xlsx_report_pabi_purchase_annual" model="ir.actions.act_window">
            <field name="name">Purchase Annual</field>
            <field name="res_model">xlsx.report.pabi.purchase.annual</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_xlsx_report_pabi_purchase_annual" name="Purchase Annual Report" parent="menu_procurement_report" action="action_xlsx_report_pabi_purchase_annual" sequence="100"/>


    </data>
</openerp>
