<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_purchase_contract_view" model="ir.ui.view">
            <field name="name">xlsx.report.purchase.contract.view</field>
            <field name="model">xlsx.report.purchase.contract</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='criteria']" position="inside">
                        <group>
                            <field name="date_report"/>
                        </group>
                        <group></group>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="action_report_purchase_contract" model="ir.actions.act_window">
            <field name="name">Purchase Contract Report</field>
            <field name="res_model">xlsx.report.purchase.contract</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_purchase_contract"
            name="Purchase Contract"
            parent="menu_pabi_payable_report"
            action="action_report_purchase_contract"
            sequence="40"/>
    </data>
</openerp>
