<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_xlsx_report_partner_detail_form" model="ir.ui.view">
            <field name="name">view.xlsx.report.partner.detail.form</field>
            <field name="model">xlsx.report.partner.detail</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='criteria']" position="inside">
                    <group>
                        <field name="category_ids" widget="many2many_tags"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="customer"/>
                        <field name="customer_partner_ids" string=" "
                            placeholder="Select specific customers"
                            attrs="{'invisible': [('customer', '=', False)]}"
                            widget="many2many_tags"/>
                        <field name="supplier"/>
                        <field name="supplier_partner_ids" string=" "
                            placeholder="Select specific suppliers"
                            attrs="{'invisible': [('supplier', '=', False)]}"
                            widget="many2many_tags"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="action_xlsx_report_partner_detail_form" model="ir.actions.act_window">
            <field name="name">Partner Detail</field>
            <field name="res_model">xlsx.report.partner.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_xlsx_report_partner_detail"
            name="Partner Detail"
            parent="menu_pabi_account_report"
            action="action_xlsx_report_partner_detail_form"
            sequence="10"/>
    </data>
</openerp>
