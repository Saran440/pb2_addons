<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        # Jasper Reports
        <record id="jasper_report_account_common_view" model="ir.ui.view">
            <field name="nmae">jasper.report.account.common.view</field>
            <field name="model">report.account.common</field>
            <field name="arch" type="xml">
                <form string="Jasper Report">
                    <group col="4">
                        <field name="chart_account_id" widget="selection"/>
                        <field name="company_id" invisible="1"/>
                        <field name="fiscalyear_ids" widget="many2many_tags" domain="[('company_id', '=', company_id)]"/>
                    </group>
                    <notebook tabpos="up" colspan="4">
                        <page string="Time Filters" name="filters">
                            <group>
                                <field name="filter" context="{'fiscalyear_ids': fiscalyear_ids}"/>
                            </group>
                            <group string="Dates" attrs="{'invisible': [('filter', '!=', 'filter_date')], 'required': [('filter', '=', 'filter_date')]}">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group string="Periods" attrs="{'invisible': [('filter', '!=', 'filter_period')], 'required': [('filter', '=', 'filter_period')]}">
                                <field name="period_from" domain="[('company_id', '=', company_id), ('fiscalyear_id', 'in', fiscalyear_ids[0][2]), ('special', '=', False)]"/>
                                <field name="period_to" domain="[('company_id', '=', company_id), ('fiscalyear_id', 'in', fiscalyear_ids[0][2]), ('special', '=', False)]"/>
                            </group>
                        </page>
                    </notebook>
                    <footer>
                        <button name="run_report" string="Execute Report" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" type="object" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        # XLSX Reports
        <record id="xlsx_report_account_common_view" model="ir.ui.view">
            <field name="name">xlsx.report.account.common.view</field>
            <field name="model">report.account.common</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='criteria']" position="inside">
                        <group col="4">
                            <field name="chart_account_id" widget="selection"/>
                            <field name="company_id" invisible="1"/>
                            <field name="fiscalyear_ids" widget="many2many_tags" domain="[('company_id', '=', company_id)]"/>
                        </group>
                        <notebook tabpos="up" colspan="4">
                            <page string="Time Filters" name="filters">
                                <group>
                                    <field name="filter" context="{'fiscalyear_ids': fiscalyear_ids}"/>
                                </group>
                                <group string="Dates" attrs="{'invisible': [('filter', '!=', 'filter_date')], 'required': [('filter', '=', 'filter_date')]}">
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                                <group string="Periods" attrs="{'invisible': [('filter', '!=', 'filter_period')], 'required': [('filter', '=', 'filter_period')]}">
                                    <field name="period_from" domain="[('company_id', '=', company_id), ('fiscalyear_id', 'in', fiscalyear_ids[0][2]), ('special', '=', False)]"/>
                                    <field name="period_to" domain="[('company_id', '=', company_id), ('fiscalyear_id', 'in', fiscalyear_ids[0][2]), ('special', '=', False)]"/>
                                </group>
                            </page>
                        </notebook>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
