<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_cheque_register_view" model="ir.ui.view">
            <field name="name">xlsx.report.cheque.register.view</field>
            <field name="model">xlsx.report.cheque.register</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='criteria']" position="inside">
                        <group>
                            <field name="date_cheque_received"/>
                            <field name="number_cheque_from"/>
                            <field name="account_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="cheque_lot_ids" widget="many2many_tags"/>
                            <field name="number_cheque_to"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="action_report_cheque_register" model="ir.actions.act_window">
            <field name="name">Cheque Register Report</field>
            <field name="res_model">xlsx.report.cheque.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_cheque_register"
            name="Cheque Register"
            parent="menu_pabi_account_report"
            action="action_report_cheque_register"
            sequence="30"/>
    </data>
</openerp>
