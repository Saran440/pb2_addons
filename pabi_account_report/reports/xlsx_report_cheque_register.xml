<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_cheque_register_view" model="ir.ui.view">
            <field name="name">xlsx.report.cheque.register.view</field>
            <field name="model">xlsx.report.cheque.register</field>
            <field name="inherit_id" ref="pabi_account_report.xlsx_report_account_common_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="date_from" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_to" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="date_from" position="before">
                    <field name="date_cheque_received"/>
                </field>
                <field name="fiscalyear_ids" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//page[1]" position="after">
                    <page string="Accounts Filter" name="accounts">
                        <separator string="Print only" colspan="4"/>
                        <field name="journal_ids"/>
                    </page>
                    <page string="Cheque Lot Filters" name="cheque lot">
                        <separator string="Print only" colspan="4"/>
                        <field name="cheque_lot_ids"/>
                    </page>
                    <page string="Cheque Filters" name="cheque">
                        <group>
                            <group>
                                <field name="number_cheque_from"/>
                                <field name="number_cheque_to"/>
                            </group>
                            <group></group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="action_report_cheque_register" model="ir.actions.act_window">
            <field name="name">Cheque Register Report</field>
            <field name="res_model">xlsx.report.cheque.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_cheque_register"
            name="Cheque Register"
            parent="menu_pabi_account_report"
            action="action_report_cheque_register"
            sequence="30"/>
    </data>
</openerp>
