<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_advance_payment_view" model="ir.ui.view">
            <field name="name">xlsx.report.advance.payment.view</field>
            <field name="model">xlsx.report.advance.payment</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='criteria']" position="inside">
                        <group>
                            <field name="account_id"/>
                            <field name="date_report"/>
                        </group>
                        <group></group>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="action_report_advance_payment" model="ir.actions.act_window">
            <field name="name">Advance Payment Report</field>
            <field name="res_model">xlsx.report.advance.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_advance_payment"
            name="Advance Payment"
            parent="menu_pabi_account_report"
            action="action_report_advance_payment"
            sequence="50"/>
    </data>
</openerp>
