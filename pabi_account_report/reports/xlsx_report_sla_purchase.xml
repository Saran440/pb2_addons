<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="xlsx_report_sla_purchase_view" model="ir.ui.view">
            <field name="name">xlsx.report.sla.purchase.view</field>
            <field name="model">xlsx.report.sla.purchase</field>
            <field name="inherit_id" ref="pabi_utils.xlsx_report_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='criteria']" position="inside">
                        <group>
                            <field name="start_period_id"/>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="end_period_id"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="action_report_sla_purchase" model="ir.actions.act_window">
            <field name="name">SLA Purchase Report</field>
            <field name="res_model">xlsx.report.sla.purchase</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_report_sla_purchase"
            name="SLA Purchase"
            parent="menu_pabi_account_report"
            action="action_report_sla_purchase"
            sequence="100"/>
    </data>
</openerp>
